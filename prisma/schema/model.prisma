model Model {
  id                 String                   @id @default(cuid())
  createdAt          DateTime                 @default(now())
  updatedAt          DateTime                 @updatedAt
  userName           String                   @unique
  firstName          String?
  lastName           String?
  childCount         Int
  age                Int
  platforms          ModelSocialAccount[]
  conversation       Conversation[]
  samplePictures     ModelSamplePicture[]
  physicalAttributes ModelPhysicalAttributes?
}

model ModelPhysicalAttributes {
  id            Int        @id @default(autoincrement())
  height        Int?
  weight        Int?
  bust          Int?
  waist         Int?
  model         Model      @relation(fields: [modelId], references: [id])
  modelId       String     @unique
  skinTone      SkinTone?  @relation(fields: [skinToneName], references: [name])
  skinToneName  String?
  ethnicity     Ethnicity? @relation(fields: [ethnicityName], references: [name])
  ethnicityName String?

  @@index([ethnicityName])
  @@index([skinToneName])
  @@index([modelId])
}

model ModelSamplePicture {
  id                      String         @id @default(cuid())
  createdAt               DateTime       @default(now())
  updatedAt               DateTime       @updatedAt
  model                   Model          @relation(fields: [modelId], references: [id])
  framing                 PictureFraming @relation(fields: [pictureFramingName], references: [name])
  exposedPart             BodyPart       @relation(fields: [bodyPartName], references: [name])
  vaginaColor             VaginaColor?   @relation(fields: [vaginaColorName], references: [name])
  vaginaColorName         String?
  bodyPartName            String
  pictureFramingName      String
  consolidatedDescription String
  modelId                 String
  url                     String

  @@index([modelId])
  @@index([vaginaColorName])
  @@index([bodyPartName])
  @@index([pictureFramingName])
}

model ModelSocialAccount {
  id                String            @id @default(cuid())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  socialAccountType SocialAccountType @relation(fields: [socialAccountName], references: [name])
  socialAccountName String
  username          String
  link              String
  model             Model             @relation(fields: [modelId], references: [id])
  modelId           String

  @@index([modelId])
  @@index([socialAccountName])
}
